extends:
  eslint-config-airbnb

parser:
  babel-eslint

settings:
  ecmascript: 6

ecmaFeatures:
  jsx: true
  modules: true
  destructuring: true
  classes: true
  forOf: true
  blockBindings: true
  arrowFunctions: true

env:
  browser: true

rules:
  indent: 2
  func-style: 0
  no-underscore-dangle: 0
  global-require: 0
  func-names: 0
  import/no-unresolved: 0
  import/extensions: 0
  import/no-extraneous-dependencies: 0
  comma-dangle: 0
  class-methods-use-this: 0
  no-console: 0
  no-param-reassign: 0
  no-unused-vars: 0
  jsx-a11y/label-has-for: 0
  react/jsx-filename-extension: 0
  react/prop-types: 0
  react/prefer-stateless-function: 0
  react/forbid-prop-types: 0
  react/jsx-no-bind: 0
